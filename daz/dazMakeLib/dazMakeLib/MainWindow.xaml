<Window x:Class="dazMakeLib.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dazMakeLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbHtml" HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="554" Height="179" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        <Button Content="Parse HTML" HorizontalAlignment="Left" Margin="603,65,0,0" VerticalAlignment="Top" Height="30" Width="153" Click="Button_Click"/>
        <TextBox x:Name="tbLog" HorizontalAlignment="Left" Margin="10,245,0,0" Text="Log" TextWrapping="Wrap" VerticalAlignment="Top" Width="554" Height="140" VerticalScrollBarVisibility="Auto"/>
        <Label Content="Copy&amp;Paste HTML from the Product Library" HorizontalAlignment="Left" Height="28" Margin="10,10,0,0" VerticalAlignment="Top" Width="318"/>
        <Button x:Name="btDownload" Content="Download" HorizontalAlignment="Left" Margin="603,128,0,0" VerticalAlignment="Top" Height="33" Width="153" Click="btDownload_Click"/>

    </Grid>
</Window>
